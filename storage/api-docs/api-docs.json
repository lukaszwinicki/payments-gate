{
    "openapi": "3.0.0",
    "info": {
        "title": "Payments Gate",
        "description": "API for handling payment transactions",
        "version": "1.0.0"
    },
    "paths": {
        "/api/transactions/recent": {
            "get": {
                "tags": [
                    "Transactions"
                ],
                "summary": "Get recent transactions",
                "operationId": "94c31977814f04f492128758c14bef0e",
                "parameters": [
                    {
                        "name": "X-API-KEY",
                        "in": "header",
                        "description": "Merchant API key",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "api-key"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of recent transactions",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "transactionUuid": {
                                                "type": "string",
                                                "example": "c061745d-e26f-4d8b-b923-4f2297f414a6"
                                            },
                                            "amount": {
                                                "type": "number",
                                                "format": "float",
                                                "example": 199.99
                                            },
                                            "currency": {
                                                "type": "string",
                                                "example": "PLN"
                                            },
                                            "status": {
                                                "type": "string",
                                                "example": "SUCCESS"
                                            },
                                            "paymentMethod": {
                                                "type": "string",
                                                "example": "TPAY"
                                            },
                                            "createdAt": {
                                                "type": "string",
                                                "format": "date-time",
                                                "example": "2026-03-01 12:00:00"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/transactions/payment-methods/share": {
            "get": {
                "tags": [
                    "Transactions"
                ],
                "summary": "Get payment method share statistics",
                "operationId": "4431ba811abc4b95a722a451ddcd6897",
                "parameters": [
                    {
                        "name": "X-API-KEY",
                        "in": "header",
                        "description": "Merchant API key",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "api-key"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Share of each payment method",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "paymentMethod": {
                                                "type": "string",
                                                "example": "TPAY"
                                            },
                                            "count": {
                                                "type": "integer",
                                                "example": 100
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/transactions/total": {
            "get": {
                "tags": [
                    "Transactions"
                ],
                "summary": "Get total number of transactions",
                "operationId": "6f72125fdb1a4f8ab192da0eb981064f",
                "parameters": [
                    {
                        "name": "X-API-KEY",
                        "in": "header",
                        "description": "Merchant API key",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "api-key"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Total transaction count",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "total": {
                                            "type": "integer",
                                            "example": 1234
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/transactions/balances": {
            "get": {
                "tags": [
                    "Transactions"
                ],
                "summary": "Get total balances of transactions",
                "operationId": "59a8b4cc0c0b9b0fc2dc43b3a11b307e",
                "parameters": [
                    {
                        "name": "X-API-KEY",
                        "in": "header",
                        "description": "Merchant API key",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "api-key"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Balances of transactions",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "totalAmount": {
                                            "type": "number",
                                            "format": "float",
                                            "example": 9999.99
                                        },
                                        "currency": {
                                            "type": "string",
                                            "example": "PLN"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/transactions/rejected": {
            "get": {
                "tags": [
                    "Transactions"
                ],
                "summary": "Get total number of failed transactions",
                "operationId": "f10655a93dc7e2a6ac48ae54497f0c97",
                "parameters": [
                    {
                        "name": "X-API-KEY",
                        "in": "header",
                        "description": "Merchant API key",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "api-key"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Total failed transactions",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "failedCount": {
                                            "type": "integer",
                                            "example": 12
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/transactions": {
            "get": {
                "tags": [
                    "Transactions"
                ],
                "summary": "Get all transactions for merchant",
                "operationId": "79d70cb12da898f44d1c95f18549b0ed",
                "parameters": [
                    {
                        "name": "X-API-KEY",
                        "in": "header",
                        "description": "Merchant API key",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "api-key"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of merchant transactions",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "transactionUuid": {
                                                "type": "string",
                                                "example": "c061745d-e26f-4d8b-b923-4f2297f414a6"
                                            },
                                            "amount": {
                                                "type": "number",
                                                "format": "float",
                                                "example": 199.99
                                            },
                                            "currency": {
                                                "type": "string",
                                                "example": "PLN"
                                            },
                                            "status": {
                                                "type": "string",
                                                "example": "SUCCESS"
                                            },
                                            "paymentMethod": {
                                                "type": "string",
                                                "example": "TPAY"
                                            },
                                            "createdAt": {
                                                "type": "string",
                                                "format": "date-time",
                                                "example": "2026-03-01 12:00:00"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/notifications": {
            "get": {
                "tags": [
                    "Transactions"
                ],
                "summary": "Get transaction notifications for merchant",
                "operationId": "303534d329252cfb951a36f27a9b3bbd",
                "parameters": [
                    {
                        "name": "X-API-KEY",
                        "in": "header",
                        "description": "Merchant API key",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "api-key"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of transaction notifications",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "type": "integer",
                                                "example": 1
                                            },
                                            "transactionUuid": {
                                                "type": "string",
                                                "example": "c6e2c816-3f5e-417b-9e91-a794223aa903"
                                            },
                                            "transactionId": {
                                                "type": "integer",
                                                "example": 123
                                            },
                                            "status": {
                                                "type": "string",
                                                "example": "SUCCESS"
                                            },
                                            "statusType": {
                                                "type": "string",
                                                "example": "SUCCESS_REFUND"
                                            },
                                            "createdAt": {
                                                "type": "string",
                                                "format": "date-time",
                                                "example": "2026-03-01 12:00:00",
                                                "nullable": true
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/create-payment-link": {
            "post": {
                "tags": [
                    "Payment Links"
                ],
                "summary": "Create payment link",
                "operationId": "100bd203dadd22b6214b62288bf9880c",
                "parameters": [
                    {
                        "name": "X-API-KEY",
                        "in": "header",
                        "description": "Merchant API key",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "api-key"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "amount",
                                    "currency",
                                    "notificationUrl",
                                    "returnUrl",
                                    "expiresAt"
                                ],
                                "properties": {
                                    "amount": {
                                        "type": "number",
                                        "format": "float",
                                        "example": 199.99
                                    },
                                    "currency": {
                                        "type": "string",
                                        "example": "PLN"
                                    },
                                    "notificationUrl": {
                                        "type": "string",
                                        "format": "uri",
                                        "example": "https://test.payment-gate.pl/callback"
                                    },
                                    "returnUrl": {
                                        "type": "string",
                                        "format": "uri",
                                        "example": "https://test.payment-gate.pl/return-url"
                                    },
                                    "expiresAt": {
                                        "type": "string",
                                        "format": "date-time",
                                        "example": "2026-03-01 12:00:00"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Payment link created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "paymentLink": {
                                            "type": "string",
                                            "example": "http://payments-gate.pl/payment/17a4186a-9ba1-493d-aae6-d9c2918e7085"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error"
                    },
                    "500": {
                        "description": "Payment link generation failed"
                    }
                }
            }
        },
        "/api/payment/{payment_link_id}": {
            "get": {
                "tags": [
                    "Payment Links"
                ],
                "summary": "Get payment link details",
                "operationId": "a60fd6aebf6e8a350c1881f01c3f8572",
                "parameters": [
                    {
                        "name": "paymentLinkId",
                        "in": "path",
                        "description": "Payment link UUID",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid",
                            "example": "c6e2c816-3f5e-417b-9e91-a794223aa903"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Payment link details",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "payment": {
                                            "properties": {
                                                "paymentLinkId": {
                                                    "type": "string",
                                                    "example": "d0947206-f142-44d1-af78-7b6b865f7394"
                                                },
                                                "amount": {
                                                    "type": "number",
                                                    "format": "float",
                                                    "example": 199.99
                                                },
                                                "currency": {
                                                    "type": "string",
                                                    "example": "PLN"
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "transaction": {
                                            "properties": {
                                                "status": {
                                                    "type": "string",
                                                    "example": "SUCCESS"
                                                },
                                                "amount": {
                                                    "type": "number",
                                                    "format": "float",
                                                    "example": 199.99
                                                },
                                                "currency": {
                                                    "type": "string",
                                                    "example": "PLN"
                                                },
                                                "paymentMethod": {
                                                    "type": "string",
                                                    "example": "TPAY"
                                                },
                                                "returnUrl": {
                                                    "type": "string",
                                                    "format": "uri",
                                                    "example": "https://test.payment-gate.pl/return-url"
                                                }
                                            },
                                            "type": "object",
                                            "nullable": true
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Payment link not found"
                    },
                    "410": {
                        "description": "Payment link expired"
                    },
                    "500": {
                        "description": "Invalid payment link"
                    }
                }
            }
        },
        "/api/create-transaction": {
            "post": {
                "tags": [
                    "Transactions"
                ],
                "summary": "Create new transaction",
                "description": "Supported payment methods: TPAY, PAYNOW, NODA.",
                "operationId": "0b946754e09859751bb0d713cef1404d",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "amount",
                                    "email",
                                    "name",
                                    "paymentMethod",
                                    "notificationUrl",
                                    "returnUrl"
                                ],
                                "properties": {
                                    "amount": {
                                        "type": "string",
                                        "example": "12.34"
                                    },
                                    "email": {
                                        "type": "string",
                                        "example": "jan.kowalski@gmail.com"
                                    },
                                    "name": {
                                        "type": "string",
                                        "example": "Jan Kowalski"
                                    },
                                    "currency": {
                                        "type": "string",
                                        "example": "PLN"
                                    },
                                    "paymentMethod": {
                                        "type": "string",
                                        "enum": [
                                            "TPAY",
                                            "PAYNOW",
                                            "NODA"
                                        ],
                                        "example": "TPAY"
                                    },
                                    "notificationUrl": {
                                        "type": "string",
                                        "example": "https://test.payment-gate.pl/callback"
                                    },
                                    "returnUrl": {
                                        "type": "string",
                                        "example": "https://test.payment-gate.pl/return-url"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Transaction created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "link": {
                                            "type": "string",
                                            "example": "https://link-to-payment"
                                        },
                                        "transactionUuid": {
                                            "type": "string",
                                            "example": "c6e2c816-3f5e-417b-9e91-a794223aa903"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid transaction data provided",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "The transaction could not be completed"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/refund-payment": {
            "post": {
                "tags": [
                    "Transactions"
                ],
                "summary": "Refund payment",
                "operationId": "58f3d9871ca37f979a5dee7bd8c7f5e3",
                "parameters": [
                    {
                        "name": "signature",
                        "in": "header",
                        "description": "HMAC signature of the request body",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "0798f264-f887-4102-b0ce-9d27e3076cc5"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "transactionUuid"
                                ],
                                "properties": {
                                    "transactionUuid": {
                                        "type": "string",
                                        "example": "c6e2c816-3f5e-417b-9e91-a794223aa903"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Payment refund",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "string",
                                            "example": "Refund"
                                        },
                                        "transactionUuid": {
                                            "type": "string",
                                            "example": "c6e2c816-3f5e-417b-9e91-a794223aa903"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid transaction data provided",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Refund payment not completed."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/transaction/{uuid}/status": {
            "get": {
                "tags": [
                    "Transactions"
                ],
                "summary": "Get transaction status by UUID",
                "operationId": "ab9deb5f5dc75490b7ca4373978cf3ef",
                "parameters": [
                    {
                        "name": "uuid",
                        "in": "path",
                        "description": "Transaction UUID",
                        "required": true,
