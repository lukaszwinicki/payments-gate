                            "type": "string",
                            "example": "c6e2c816-3f5e-417b-9e91-a794223aa903"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Transaction status",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "SUCCESS"
                                        },
                                        "amount": {
                                            "type": "number",
                                            "format": "float",
                                            "example": 199.99
                                        },
                                        "currency": {
                                            "type": "string",
                                            "example": "PLN"
                                        },
                                        "paymentMethod": {
                                            "type": "string",
                                            "example": "TPAY"
                                        },
                                        "returnUrl": {
                                            "type": "string",
                                            "format": "uri",
                                            "example": "https://test.payment-gate.pl/return-url"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Transaction not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Transaction not found"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
